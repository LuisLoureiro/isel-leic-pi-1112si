@using mvc.Models
@model RegisterUser
@{
    ViewBag.Title = "Register";
    ViewBag.Scripts = new string[]{
        Url.Content("~/Scripts/li51ng08.js")
    };
}

<h2>Registar novo utilizador</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { name = "registerForm", 
                                                                     onsubmit = "return utils.validateRegisterForm()", 
                                                                     @class = "form-stacked"}))
{
    @Html.EditorForModel()
    
    <div class="well">
        <input type="submit" value="Registar" class="btn primary"/>
        @Html.ActionLink("Cancelar", "Index", "Home", null, new { @class = "btn danger"})
    </div>
    
}
